                                        <script>
                                              window.onload =function() {
                                                      alert("Welcome to my 2nd website!");
                                              };
                                               function showSearch(event) {
                                                    event.preventDefault(); // stop the page from reloading

                                                        var input = document.getElementById("searchInput").value.toLowerCase();

                                                            // Get all article elements
                                                                var articles = document.querySelectorAll("article");

                                                                    // Hide all articles first
                                                                        articles.forEach(function(article) {
                                                                                  article.style.display = "none";
                                                                        });

                                                                            // Loop through each article and check if the text matches
                                                                                let found = false;
                                                                                    articles.forEach(function(article) {
                                                                                              if (article.innerText.toLowerCase().includes(input)) {
                                                                                                        article.style.display = "block";
                                                                                                                found = true;
                                                                                              }
                                                                                    });

                                                                                        if (!found) {
                                                                                                  alert("Inventor not found.");
                                                                                        }
                                               }
                                                   </script>
                                                     <h1>My 2nd website</h1>
                                                     <p id="description"><i>
                                                       This is my 2nd website,I am learning to create websites using HTML and CSS.</i></p>
                                                         <form onsubmit="showSearch(event);return false;">
                                                             <input type="text" id="searchInput" placeholder="Search" style="padding: 8px; width: 300px; border-radius: 5px; border: 1px solid #ccc;">
                                                                 <button type="submit" style="padding: 8px 12px; border: none; background-color: white; border-radius: 5px;">Search</button>
                                                                   </form>
                                                                       <header><h2>Famous inventors </h2>
